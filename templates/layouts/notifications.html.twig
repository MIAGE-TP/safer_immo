{# Used to display notifications sent using the addFlash method in controllers #}
{% for label, messages in app.flashes(['danger', 'success']) %}
    {% for message in messages %}
        <div class="alert alert-{{label}} alert-dismissible fade show text-center" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}