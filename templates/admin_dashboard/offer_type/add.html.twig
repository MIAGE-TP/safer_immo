{% extends 'layouts/admin_base.html.twig' %}

{% block page_title %} <h1>Ajout d'un type d'offre</h1> {% endblock %}

{% block content %}
<div class="col-md-9">
  <form class="form" method="POST" action="{{path('store_offer_type')}}">
      <div class="row">
          <div class="col-md-8">
              <div class="form-group">
                <label for="libelle" class="col-form-label">Libellé</label>
                <input required name="libelle" type="text" class="form-control" id="libelle" placeholder="Libellé du type d'offre" value="">
              </div>
              <button type="submit" class="btn btn-primary float-right">Enregistrer</button>
          </div>
          <!--end col-md-8-->
      </div>
  </form>
</div>
{% endblock %}