{% extends 'layouts/admin_base.html.twig' %}

{% block page_title %} <h1>Modification de catégorie de bien</h1> {% endblock %}

{% block content %}
<div class="col-md-9">
  <form class="form" method="POST" action="{{path('update_good_type')}}">
      <div class="row">
          <div class="col-md-8">
              <div class="form-group">
                <label for="libelle" class="col-form-label">Libellé</label>
                <input required name="libelle" type="text" class="form-control" id="libelle" placeholder="Libellé de la catégorie" value="{{category.libelle}}">
                <input required name="id" type="hidden" class="form-control" id="id" value="{{category.id}}">
              </div>
              <button type="submit" class="btn btn-primary float-right">Modifier</button>
          </div>
          <!--end col-md-8-->
      </div>
  </form>
</div>
{% endblock %}